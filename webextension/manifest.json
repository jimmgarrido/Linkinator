{
  "manifest_version": 2,
  "name": "DevDiv Linkinator 2000",
  "author": "Daniel Cazzulino",
  "version": "0.2",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },  
  "page_action": {
    "default_icon": {                    
      "20": "icon_20.png",
      "40": "icon_40.png"
    },
    "default_title": "Create a nice short DevDiv link and copy to clipboard!"
  },
  "icons" : {
    "20": "icon_24.png",
    "40": "icon_48.png"
},
  "permissions": [
    "*://*/*", "tabs", "storage", "background"
  ]
}